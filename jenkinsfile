pipeline {
    agent any
       
     tools { 
        maven 'localMaven' 
        jdk 'localJDK' 
    }
    parameters {
         string(name: 'tomcat_dev', defaultValue: '18.220.72.119', description: 'Staging Server')
         string(name: 'tomcat_prod', defaultValue: '18.222.205.118', description: 'Production Server')
    }

    triggers {
         pollSCM('* * * * *')
     }

stages{
        stage('Build'){
            steps {
               bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        bat "pscp -i C:/Users/nihal/Desktop/jenkins_learning/jenkins-demo.pem **/target/*.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat7/webapps"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                      bat "pscp -i C:/Users/nihal/Desktop/jenkins_learning/jenkins-demo.pem **/target/*.war ec2-user@${params.tomcat_prod}:/var/lib/tomcat7/webapps"
                    }
                }
            }
        }
    }
}
