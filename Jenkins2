pipeline {
    agent any
     tools { 
        maven 'apache-maven-3.6.0' 
        jdk 'jdk1.8.0_71' 
    }
    stages{
        stage('Build'){
            steps {
               bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
    }
}
